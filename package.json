{
  "name": "sermon-translation",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:next": "next build",
    "fix-imports": "node scripts/fix-imports.js",
    "build:ws": "chmod +x scripts/fix-imports.js && npm run fix-imports && rm -rf dist && mkdir -p dist/server && tsc -p tsconfig.server.json && [ -f .env.ws ] && cp .env.ws dist/server/ || true",
    "build:prod": "npm run build:ws && npm ci --omit=dev",
    "start": "concurrently \"PORT=$PORT next start\" \"node --experimental-specifier-resolution=node dist/server/websocket.js\"",
    "ws": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm --experimental-specifier-resolution=node src/server/websocket.ts",
    "ws:prod": "node --experimental-specifier-resolution=node dist/server/websocket.js",
    "webrtc": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm --experimental-specifier-resolution=node src/server/webrtc.ts",
    "webrtc:prod": "node --experimental-specifier-resolution=node dist/server/webrtc.js",
    "start:all": "concurrently \"PORT=$PORT next start\" \"npm run ws\" \"npm run webrtc\"",
    "lint": "next lint",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --config jest.config.cjs",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --config jest.config.cjs --testPathPattern=src/__tests__/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --config jest.config.cjs --testPathPattern=src/__tests__/integration",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --config jest.config.cjs --watch"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/dotenv": "^6.1.1",
    "@types/pako": "^2.0.3",
    "@vercel/edge": "^1.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "express-rate-limit": "^7.5.0",
    "ioredis": "^5.6.0",
    "lucide-react": "^0.487.0",
    "mongoose": "^8.13.2",
    "next": "14.2.26",
    "pako": "^2.1.0",
    "prom-client": "^15.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sonner": "^2.0.2",
    "tailwind-merge": "^3.1.0",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.18.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@types/webpack": "^5.28.5",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.26",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=11.2.0"
  }
}
