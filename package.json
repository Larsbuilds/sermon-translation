{
  "name": "sermon-translation",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:ws": "rm -rf dist && mkdir -p dist/server && tsc -p tsconfig.server.json && [ -f .env.ws ] && cp .env.ws dist/server/ || true",
    "build:prod": "npm run build:ws && npm ci --omit=dev",
    "start": "concurrently \"PORT=$PORT next start\" \"node --experimental-specifier-resolution=node dist/server/websocket.js\"",
    "ws": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm --experimental-specifier-resolution=node src/server/websocket.ts",
    "ws:prod": "node --experimental-specifier-resolution=node dist/server/websocket.js",
    "lint": "next lint"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/dotenv": "^6.1.1",
    "@types/ws": "^8.18.1",
    "@vercel/edge": "^1.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "ioredis": "^5.3.2",
    "lucide-react": "^0.486.0",
    "mongoose": "^8.13.1",
    "next": "14.2.26",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sonner": "^2.0.2",
    "tailwind-merge": "^3.1.0",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.26",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=11.2.0"
  }
}
